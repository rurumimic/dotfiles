{{- if eq .osid "linux-ubuntu" -}}
#!/bin/sh

. {{ joinPath .chezmoi.workingTree "rc.d" "chezmoi.sh" }}

echo "[Dotfiles] Development Tools"

build_tools="
    build-essential
    cmake
    ninja-build
    m4
    autoconf
    automake
    autotools-dev
    libtool
    pkg-config
    gettext
"

source_tools="
    git
    global
    universal-ctags
    bear
"

download_tools="
    curl
    wget
"

miscellaneous="
    unzip
"

all_packages="
    $build_tools
    $source_tools
    $download_tools
    $miscellaneous
"

echo "Install Packages:"
echo "sudo nala install -y $all_packages"

ask_confirm
answer=$?
case $answer in
  0)
    sudo nala install -y $all_packages
    ;;
  1)
    echo "Skip install packages"
    ;;
  *)
    echo "Quit"
    exit 1
    ;;
esac

{{ end -}}

